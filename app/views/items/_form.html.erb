<%= form_for(@item) do |f| %>

  <%= f.label :name %>
  <%= f.text_field :name, class: 'form-control' %>
  <%= f.label :rate %>
  <%= f.text_field :rate, class: 'form-control' %>
  <%= f.label :item_category_id %>
  <%= f.select :item_category_id, ItemCategory.pluck(:id), selected: @item_category.id, class: 'form-control'%>
  <%= f.submit "Save changes", class: "btn btn-primary" %>
<% end %>
